{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "charset": "utf8",
    "noImplicitAny": true,
    "removeComments": false,
    "outDir": "dist/",
    "sourceMap": true,
    "typeRoots": ["node_modules/@types"],
    "declaration": true,
    "noEmit": true
  },
  "compileOnSave": true,
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
